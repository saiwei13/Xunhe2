<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/setting_head"
        layout="@layout/title_back_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <!--投诉编号-->


        <LinearLayout
            android:id="@+id/feedback_river_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auto_dimen2_70"
            android:background="@color/white"
            android:visibility="visible">
            <!-- Caption -->
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/auto_dimen2_20"
                android:text="投诉编号： "
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/auto_font_size_22" />

            <TextView
                android:id="@+id/tousu_detail_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/auto_dimen_5"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/auto_font_size_22"
                />

            <TextView
                android:id="@+id/tousu_detail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="待认领"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/auto_dimen2_15"
                android:layout_marginRight="@dimen/auto_dimen2_15"
                android:src="@drawable/no_deal"/>

        </LinearLayout>


            <View style="@style/line" />




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/auto_dimen2_70"
            android:background="@color/white"
            android:visibility="visible">
            <!-- Caption -->


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/auto_dimen2_20"
                android:layout_centerVertical="true"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/head_shiming"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="市民"
                    android:layout_marginLeft="@dimen/auto_dimen2_5"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/auto_font_size_22" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calendar"/>
                <TextView
                    android:id="@+id/tousu_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/auto_dimen2_5"
                    android:text="xxxxxxxx"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/auto_font_size_22" />
            </LinearLayout>

            <TextView
                android:id="@+id/tousu_detail_river"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_289603"
                android:textSize="@dimen/auto_font_size_22"
                android:layout_marginLeft="@dimen/auto_dimen2_15"
                android:layout_marginRight="@dimen/auto_dimen2_15"
                android:text="测试河道"/>

        </RelativeLayout>

        <View style="@style/line" />

        <TextView
            android:id="@+id/tousu_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/auto_dimen2_20"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/auto_font_size_26"
            android:background="@color/white"
            android:text="得得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到到"/>

        <saiwei.com.river.view.MyGridView
            android:id="@+id/tousu_detail_gridView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/auto_dimen2_10"
            android:columnWidth="90dp"
            android:gravity="center"
            android:numColumns="3"
            android:background="@color/white">

        </saiwei.com.river.view.MyGridView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/auto_dimen2_70"
            android:background="@color/white"
            android:visibility="visible">
            <!-- Caption -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/auto_dimen2_20"
                android:layout_marginRight="@dimen/auto_dimen2_15"
                android:src="@drawable/position_detail"/>

            <TextView
                android:id="@+id/tousu_detail_realaddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/auto_dimen2_20"
                android:text="投诉编号： "
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/auto_font_size_22" />

        </LinearLayout>

        <View style="@style/line"
            android:layout_height="5dp"/>

        <!--办事跟踪信息-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/auto_dimen2_60"
            android:background="@color/white"
            >
            <View
                android:layout_width="3dp"
                android:layout_height="@dimen/auto_dimen2_30"
                android:layout_marginLeft="@dimen/auto_dimen2_20"
                android:layout_marginRight="@dimen/auto_dimen2_20"
                android:layout_gravity="center_vertical"
                android:background="#20b11d"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="办事跟踪信息："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/auto_font_size_26"
                />

        </LinearLayout>

        <View style="@style/line" />

        <saiwei.com.river.view.MyListView
            android:id="@+id/tousu_detail_process_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#efefef"
            android:dividerHeight="@dimen/auto_dimen2_1"
            android:background="@color/white"/>

        <!--处理事件信息-->

        <LinearLayout
            android:id="@+id/tousu_detail_deal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View style="@style/line"
                android:layout_height="5dp"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/auto_dimen2_60"
                android:background="@color/white"
                >
                <View
                    android:layout_width="3dp"
                    android:layout_height="@dimen/auto_dimen2_30"
                    android:layout_marginLeft="@dimen/auto_dimen2_20"
                    android:layout_marginRight="@dimen/auto_dimen2_20"
                    android:layout_gravity="center_vertical"
                    android:background="#20b11d"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="处理情况："
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/auto_font_size_26"
                    />

            </LinearLayout>

            <View style="@style/line" />

            <saiwei.com.river.view.MyListView
                android:id="@+id/tousu_detail_deal_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#efefef"
                android:dividerHeight="@dimen/auto_dimen2_1"
                android:background="@color/white"/>

        </LinearLayout>




        <View style="@style/line"
            android:layout_height="5dp"/>


        <Button
            android:id="@+id/tousu_detail_renling"
            style="@style/gdaccount_button_style"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:visibility="visible"
            android:text="投诉认领，并发放奖励金"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="#1c9d17"
            />

        <LinearLayout
            android:id="@+id/tousu_detail_renling_select_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/public_edit_padding_a"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/tousu_detail_river_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:visibility="visible">
                <!-- Caption -->
                <TextView

                    android:id="@+id/xunhe_end_item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="投诉河道名称： "
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_30" />

                <TextView
                    android:id="@+id/feedback_river_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/auto_dimen_5"
                    android:gravity="right"
                    android:text="xxxxxxxx"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_30" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/more_setting" />
            </LinearLayout>

            <View style="@style/line" />

            <LinearLayout

                android:id="@+id/tousu_detail_type_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:visibility="visible">
                <!-- Caption -->
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="投诉类型： "
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_30" />

                <TextView

                    android:id="@+id/feedback_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/auto_dimen_5"
                    android:gravity="right"
                    android:text="xxxxxxxx"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_30" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/more_setting" />
            </LinearLayout>

        </LinearLayout>

        <View style="@style/line" />

        <Button
            android:id="@+id/tousu_detail_chongfu"
            style="@style/gdaccount_button_style"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="投诉重复，无法奖励"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="#1c9d17"
            />

        <Button
            android:id="@+id/tousu_detail_close"
            style="@style/gdaccount_button_style"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="关闭投诉"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="#1c9d17"
            />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
