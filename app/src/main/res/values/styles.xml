    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/divider_color</item>
    </style>


    <!-- 用户帐号 -->
    <style name="input_text_style" parent="@android:style/Widget.EditText">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/textfield_search</item>
        <!-- <item name="android:textCursorDrawable">@null</item> -->
        <item name="android:textColor">#000000</item>
        <!-- <item name="android:textColorHint">@color/edittext_text</item> -->
    </style>

    <style name="gdaccount_edittext_style" parent="@style/input_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:layout_margin">10dip</item>
        <item name="android:paddingLeft">10dip</item>
    </style>
    <style name="gdaccount_edittext_password_style" parent="@style/gdaccount_edittext_style">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="gdaccount_button_style" parent="@style/gdbutton_style">
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="gdbutton_style" parent="@android:style/Widget.Button">
        <!--<item name="android:textColor">@color/button_text</item>-->
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_get_auth</item>
        <!--<item name="android:background">@drawable/button_background</item>-->
    </style>


    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--TextView黑色字体-->
    <style name="TextViewDarkWrapContent_9" parent="WrapContent">
        <item name="android:textColor">@color/black_161212</item>
        <item name="android:textSize">@dimen/nine</item>
    </style>

    <style name="TextViewDarkWrapContent_10" parent="TextViewDarkWrapContent_9">
        <item name="android:textSize">@dimen/ten</item>
    </style>

    <style name="TextViewDarkWrapContent_11" parent="TextViewDarkWrapContent_9">
        <item name="android:textSize">@dimen/eleven</item>
    </style>

    <style name="TextViewDarkWrapContent_12" parent="TextViewDarkWrapContent_9">
        <item name="android:textSize">@dimen/twelve</item>
    </style>

    <style name="TextViewDarkWrapContent_13" parent="TextViewDarkWrapContent_9">
        <item name="android:textSize">@dimen/thirteen</item>
    </style>

    <style name="TextViewDarkWrapContent_14" parent="TextViewDarkWrapContent_9">
        <item name="android:textSize">@dimen/fourteen</item>
    </style>

    <style name="TextViewDarkWrapContent_16" parent="TextViewDarkWrapContent_9">
        <item name="android:textSize">@dimen/sixteen</item>
    </style>


    <style name="TextViewGrayWrapContent_9" parent="WrapContent">
        <item name="android:textColor">@color/gray_b2b2b2</item>
        <item name="android:textSize">@dimen/nine</item>
    </style>

    <style name="TextViewGrayWrapContent_10" parent="TextViewGrayWrapContent_9">
        <item name="android:textSize">@dimen/ten</item>
    </style>

</resources>
